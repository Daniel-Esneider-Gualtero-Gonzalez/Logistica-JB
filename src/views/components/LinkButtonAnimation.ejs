<style>
  .btn-container-animation {
    /* display: flex; */
    /* justify-content: start; */
    display: flex;
    align-items: center;
    background-color: blue;
    color: white;

    width: 250px;
    height: 50px;
    clip-path: polygon(25% 0%, 100% 0%, 75% 100%, 0% 100%);
    /* justify-content: center; */
    position: relative;
    font-size: 20px;
    overflow: hidden;

  }

  .messagge {
    width: fit-content;
    height: fit-content;
    position: absolute;
    inset: 0;
    margin: auto;
    z-index: 2;
  }

  .btn-container-animation svg {

    width: calc(76%);
    height: calc(85%);
    opacity: 0;
  }

  .div-fill-mode {
    position: absolute;
    width: 0%;
    height: 100%;
    left: 0;
    margin-top: -1px;
    background-color: black;

  }

  .btn-container-animation:hover svg {
    animation: moveTruck 1.8s linear infinite;
  }

  .btn-container-animation:hover .div-fill-mode {
    animation: fillMode 1.7s 0.3ms both;
  }


  @keyframes fillMode {
    from {
      width: 0;
    }

    to {
      width: 100%;
    }
  }

  @keyframes moveTruck {
    0% {
      opacity: 1;
      transform: translateX(-30%);
    }

    100% {
      opacity: 0;
      transform: translateX(300%);
    }

  }
</style>

<div role="button" id=<%=id || 'default-id' %> class="border rounded btn-container-animation">
  <svg class="icon-truck-animation-btn" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none"
    stroke="currentColor" stroke-width="2" stroke-li necap="round" stroke-linejoin="round"
    class="icon icon-tabler icons-tabler-outline icon-tabler-truck">
    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
    <path d="M7 17m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
    <path d="M17 17m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
    <path d="M5 17h-2v-11a1 1 0 0 1 1 -1h9v12m-4 0h6m4 0h2v-6h-8m0 -5h5l3 5" />
  </svg>
  <span class="messagge">
    <%= text %>
  </span>
  <div class="div-fill-mode"></div>

</div>